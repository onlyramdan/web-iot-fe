 thead tr td{
   background-color: rgba(13, 110, 253, 0.7) !important;
 }
  @media (max-width: 767px) {
  .table-responsive {
    overflow-x: auto;
  }
  
  .table {
    min-width: 100%; /* Mencegah tabel terlalu kecil */
  }
