<%= render partial: "components/header"  %>
<%= render partial: "components/sidebar"  %>
<%# repot data %>
<div class="card text-center mt-4">
    <div class="card-header">
      <ul class="nav nav-tabs card-header-tabs">
        <li class="nav-item">
          <p class="nav-link active" id="dataalat-tab" data-toggle="tab" href="#dataalat" role="tab" aria-controls="dataalat" aria-selected="true" onclick="batalalat()">Alat</p>
        </li>
        <li class="nav-item">
          <p class="nav-link" id="formalat-tab" data-toggle="tab" href="#formalat" role="tab" aria-controls="formalat" aria-selected="false" onclick="tabformalat()">Form</p>
        </li>
      </ul>
    </div>
    <div class="card-body">
      <div class="tab-content mt-3">
        <div class="tab-pane active" id="dataalat" role="tabpanel" aria-labelledby="dataalat-tab">
          <div class="row">
            <div class="col text-start">
            <%# Table %>
            <div class="table-responsive">
              <table class="table table-hover table-bordered mx-0">
                <thead class="thead"> 
                  <tr>
                    <td>No.</td>
                    <td>id</td>
                    <td>Nama Alat</td>
                    <td>Lokasi</td>
                    <td>Status</td>
                    <td>Aksi</td>
                  </tr>
                </thead>
                <tbody>
                <% if @data_alat.present? 
                  no = 0
                %>
                <% @data_alat.each do |alat| %>
                  <tr>
                    <td><%= no+= 1 %></td>
                    <td><%= alat['id'] %></td>
                    <td><%= alat['nama_alat'] %></td>
                    <td><%= alat['lokasi']%></td>
                      <% if alat['status']=="1"%>
                      <td>Aktif</td>
                      <% else %>
                      <td> Tidak Aktif</td>
                      <% end %>
                    <td class="text-center">
                      <button class="btn btn-primary btn-sm" onclick="editalat('<%= alat.to_json %>')">
                      Edit
                      </button>
                      <button class="btn btn-danger btn-sm" onclick="hapusalat('<%= alat['id'].to_json %>')">
                      hapus
                      </button>
                    </td>
                  </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td class="text-center" colspan="5">Data Alat Kosong!</td>
                  </tr>
                </tbody>
                <% end %>
              </table>
            </div>
            <%# Akhir Table %>
            </div>
          </div>
          <%= render partial: "components/pagging"%>
        </div>
        <div class="tab-pane" id="formalat" role="tabpanel" aria-labelledby="formalat-tab">
          <div class="row">
            <div class="col text-start">
              <form id="form-data" action="/aksi_simpan" method="post">
                <div class="mb-3">
                  <label for="nama_alat" class="form-label ">Nama Alat</label>
                  <input type="text" id="id_alat" class="form-control" name="id_alat" hidden>
                  <input type="text" id="nama_alat" class="form-control" name="nama_alat">
                </div>
                <div class="mb-3">
                  <label for="lokasi" class="form-label ">Lokasi</label>
                  <input type="text" id="lokasi" class="form-control" name="lokasi">
                </div>
                <div class="mb-3">
                  <label for="status_alat" class="form-label ">Status</label>
                  <select id="status_alat" class="form-select" name="status" aria-label="Default select example">
                    <option value="1" checked>Aktif</option>
                    <option value="0">Tidak Aktif</option>
                  </select>
                </div>
                <button type="submit" class="btn btn-primary" id="aksi_simpan" title="Simpan">Simpan</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>

<%# card user %>
<div class="card text-center mt-4">
    <div class="card-header">
      <ul class="nav nav-tabs card-header-tabs">
        <li class="nav-item">
          <p class="nav-link active" id="datauser-tab" data-toggle="tab" href="#datauser" role="tab" aria-controls="datauser" aria-selected="true" onclick="bataluser()">User</p>
        </li>
        <li class="nav-item">
          <p class="nav-link" id="formuser-tab" data-toggle="tab" href="#formuser" role="tab" aria-controls="formuser" aria-selected="false" onclick="tabformuser()">Form</p>
        </li>
      </ul>
    </div>
    <div class="card-body">
      <div class="tab-content mt-3">
        <div class="tab-pane active" id="datauser" role="tabpanel" aria-labelledby="datauser-tab">
          <div class="row">
            <div class="col text-start">
            <%# Table %>
            <div class="table-responsive">
              <table class="table table-hover table-bordered mx-0">
                <thead class="thead">
                  <tr>
                    <td>No.</td>
                    <td>id</td>
                    <td>Nama</td>
                    <td>Email</td>
                    <td>Role</td>
                    <td>status</td>
                    <td>Aksi</td>
                  </tr>
                </thead>
                <tbody>
                <% if @data_user.present? 
                  no = 0
                %>
                <% @data_user.each do |user| %>
                  <tr>
                    <td><%= no+= 1 %></td>
                    <td><%= user['id'] %></td>
                    <td><%= user['nama'] %></td>
                    <td><%= user['email']%></td>
                    <td><%= user['role']%></td>
                      <% if user['status']=="1"%>
                      <td>Aktif</td>
                      <% else %>
                      <td> Tidak Aktif</td>
                      <% end %>
                    <td class="text-center">
                      <button class="btn btn-primary btn-sm" onclick="edituser('<%= user.to_json %>')">
                      Edit
                      </button>
                      <button class="btn btn-danger btn-sm" onclick="hapususer('<%= user['id'].to_json %>')">
                      hapus
                      </button>
                    </td>
                  </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td class="text-center" colspan="8">Data User Kosong!</td>
                  </tr>
                </tbody>
                <% end %>
              </table>
            </div>
            <%# Akhir Table %>
            </div>
          </div>
          <%= render partial: "components/pagging"%>
        </div>
        <div class="tab-pane" id="formuser" role="tabpanel" aria-labelledby="formuser-tab">
          <div class="row">
            <div class="col text-start">
              <form id="form-user" action="/user_simpan" method="post">
                <div class="mb-3">
                  <label for="nama_alat" class="form-label ">Nama</label>
                  <input type="text" id="id_user" class="form-control" name="id_user" hidden>
                  <input type="text" id="nama" class="form-control" name="nama">
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label ">Email</label>
                  <input type="text" id="email" class="form-control" name="email">
                </div>
                <div class="mb-3">
                  <label for="role" class="form-label ">Role</label>
                  <select id="role" class="form-select" name="role" aria-label="Default select example">
                    <option value="user" checked>User</option>
                    <option value="admin">Admin</option>
                  </select>
                </div>
                <div class="mb-3">
                  <label for="status_user" class="form-label ">Status</label>
                  <select id="status_user" class="form-select" name="status_user" aria-label="Default select example">
                    <option value="1" checked>Aktif</option>
                    <option value="0">Tidak Aktif</option>
                  </select>
                </div>
                <button type="submit" class="btn btn-primary" id="aksi_simpan" title="Simpan">Simpan</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>

<script>
function batalalat() {
  $('#id_alat').val('')
  $('#nama_alat').val('')
  $('#lokasi').val('')
  $('#status_alat').val('')
  $('#dataalat-tab').tab('show');
}

function bataluser() {
  $('#id_user').val('')
  $('#nama').val('')
  $('#email').val('')
  $('#role').val('')
  $('#status_user').val('')
  $('#datauser-tab').tab('show');
}

function tabformalat() {
  $('#formalat-tab').tab('show');
}

function tabformuser() {
  $('#formuser-tab').tab('show');
}

function editalat(data) {
  parse = JSON.parse(data);
  $('#id_alat').val(parse.id)
  $('#nama_alat').val(parse.nama_alat)
  $('#lokasi').val(parse.lokasi)
  $('#status_alat').val(parse.status)
  $('#formalat-tab').tab('show'); 
}

function edituser(data) {
  parse = JSON.parse(data);
  $('#id_user').val(parse.id)
  $('#nama').val(parse.nama)
  $('#email').val(parse.email)
  $('#role').val(parse.role)
  $('#status_user').val(parse.status)

  $('#formuser-tab').tab('show'); 
}

function hapusalat(id_alat) {
    var id = JSON.parse(id_alat);
    $.ajax({
      url: '/aksi_hapusalat',
      dataType: 'JSON',
      type: 'POST',
      data: {
        "id": id,
      },
      success: function (res){
        console.log(res);
        if(res.status == true){
        window.location.href = '/setting';
      }},
      error: function (res) {
        console.log(res);
      } 
      })
}
function hapususer(id_user) {
    var id = JSON.parse(id_user);
    $.ajax({
      url: '/aksi_hapususer',
      dataType: 'JSON',
      type: 'POST',
      data: {
        "id": id,
      },
      success: function (res){
        console.log(res);
        if(res.status == true){
        window.location.href = '/setting';
      }},
      error: function (res) {
        console.log(res);
      } 
      })
}

</script>
